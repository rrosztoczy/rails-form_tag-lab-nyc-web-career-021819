<h3>Student Form</h3>
<%= form_tag students_path do %>
  <label>Student first name:</label><br>
  <input type="text" id="first_name" name="student[first_name]"><br>

  <label>student description:</label><br>
  <input id="last_name" name="student[last_name]"><br>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="submit" value="Submit Student">
<% end %>